{
  "name": "opendebreif",
  "version": "0.2.4",
  "private": true,
  "description": "Record any meeting. Transcribe it. Know who said what.",
  "author": "Shkumbin Hasani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shkumbinhasani/opendebreif.git"
  },
  "type": "module",
  "scripts": {
    "start": "bun run src/app.ts",
    "dev": "bun --hot run src/app.ts",
    "build": "bun run scripts/build-binary.ts",
    "build:current": "bun run scripts/build-binary.ts --current",
    "build:native": "cd native && swiftc -O -o recorder recorder.swift",
    "test": "bun test",
    "changeset": "changeset",
    "version": "changeset version && bun run sync-version",
    "sync-version": "bun run scripts/sync-version.ts",
    "release": "bun run scripts/release.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/elevenlabs": "^2.0.4",
    "@ai-sdk/openai": "^3.0.5",
    "@elevenlabs/elevenlabs-js": "^2.29.0",
    "@opentui/core": "^0.1.69",
    "ai": "^6.0.13",
    "clipboardy": "^5.0.2",
    "openai": "^6.15.0",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.3.5"
  }
}
