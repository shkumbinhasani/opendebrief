{
  "name": "opendebreif",
  "version": "0.1.3",
  "description": "A TUI application for recording and transcribing meetings on macOS with mic and system audio capture",
  "author": "Shkumbin Hasani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shkumbinhasani/opendebreif.git"
  },
  "keywords": [
    "meeting",
    "transcription",
    "recording",
    "audio",
    "macos",
    "tui",
    "cli",
    "whisper",
    "elevenlabs",
    "openai"
  ],
  "type": "module",
  "bin": {
    "opendebreif": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "native/recorder.swift",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "os": [
    "darwin"
  ],
  "scripts": {
    "start": "bun run src/app.ts",
    "dev": "bun --hot run src/app.ts",
    "build:native": "cd native && swiftc -O -o recorder recorder.swift",
    "build": "bun run scripts/build.ts",
    "prepublishOnly": "bun run build",
    "postinstall": "node --experimental-modules scripts/postinstall.js || true",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/elevenlabs": "^2.0.4",
    "@ai-sdk/openai": "^3.0.5",
    "@elevenlabs/elevenlabs-js": "^2.29.0",
    "@opentui/core": "^0.1.69",
    "ai": "^6.0.13",
    "clipboardy": "^5.0.2",
    "openai": "^6.15.0",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.3.5"
  }
}
